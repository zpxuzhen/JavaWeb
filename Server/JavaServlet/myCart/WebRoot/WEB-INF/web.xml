<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ShowBook</servlet-name>
    <servlet-class>com.hsp.HashMap.DisableCookie.ShowBook</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>BuyBookCl</servlet-name>
    <servlet-class>com.hsp.HashMap.DisableCookie.BuyBookCl</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ShowMyCart</servlet-name>
    <servlet-class>com.hsp.HashMap.DisableCookie.ShowMyCart</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>ShowBook</servlet-name>
    <url-pattern>/servlet/ShowBook</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BuyBookCl</servlet-name>
    <url-pattern>/servlet/BuyBookCl</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowMyCart</servlet-name>
    <url-pattern>/servlet/ShowMyCart</url-pattern>
  </servlet-mapping>

</web-app>