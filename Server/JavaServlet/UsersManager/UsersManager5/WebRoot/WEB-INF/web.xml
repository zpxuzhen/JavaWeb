<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">

  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>LoginClServlet</servlet-name>
    <servlet-class>com.xz.controller.LoginClServlet</servlet-class>
  </servlet>


  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>UserClServlet</servlet-name>
    <servlet-class>com.xz.controller.UserClServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>GotoViewClServlet</servlet-name>
    <servlet-class>com.xz.controller.GotoViewClServlet</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>LoginClServlet</servlet-name>
    <url-pattern>/servlet/LoginClServlet</url-pattern>
  </servlet-mapping>


  <servlet-mapping>
    <servlet-name>UserClServlet</servlet-name>
    <url-pattern>/servlet/UserClServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GotoViewClServlet</servlet-name>
    <url-pattern>/servlet/GotoViewClServlet</url-pattern>
  </servlet-mapping>

</web-app>